<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorF5F5F7"
    android:orientation="vertical"
    tools:context=".ui.MainActivity">

    <RelativeLayout
        android:id="@+id/Re_title"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorWhite">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/app_name"
            android:textColor="@color/color333333"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/txt_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:text="设置"
            android:textColor="@color/color333333"
            android:textSize="22sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Re_title"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toStartOf="@+id/view_1"
            android:layout_toLeftOf="@+id/view_1"
            android:background="@color/colorWhite">

            <RelativeLayout
                android:id="@+id/Re_license"
                android:layout_width="match_parent"
                android:layout_height="69dp">

                <RelativeLayout
                    android:id="@+id/Re_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:visibility="invisible">

                    <LinearLayout
                        android:id="@+id/lin_license"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/et_one"
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/selector_storke_main_c"
                            android:cursorVisible="false"
                            android:gravity="center"
                            android:maxLength="1"
                            android:maxLines="1" />

                        <EditText
                            android:id="@+id/et_two"
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/selector_storke_main_c"
                            android:cursorVisible="false"
                            android:gravity="center"
                            android:maxLength="1"
                            android:maxLines="1" />

                        <EditText
                            android:id="@+id/et_three"
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/selector_storke_main_c"
                            android:cursorVisible="false"
                            android:gravity="center"
                            android:maxLength="1"
                            android:maxLines="1" />

                        <EditText
                            android:id="@+id/et_four"
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/selector_storke_main_c"
                            android:cursorVisible="false"
                            android:gravity="center"
                            android:maxLength="1"
                            android:maxLines="1" />

                        <EditText
                            android:id="@+id/et_five"
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/selector_storke_main_c"
                            android:cursorVisible="false"
                            android:gravity="center"
                            android:maxLength="1"
                            android:maxLines="1" />

                        <EditText
                            android:id="@+id/et_six"
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/selector_storke_main_c"
                            android:cursorVisible="false"
                            android:gravity="center"
                            android:maxLength="1"
                            android:maxLines="1" />

                        <EditText
                            android:id="@+id/et_seven"
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/selector_storke_main_c"
                            android:cursorVisible="false"
                            android:gravity="center"
                            android:maxLength="1"
                            android:maxLines="1" />

                        <EditText
                            android:id="@+id/et_eight"
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/selector_storke_main_c"
                            android:cursorVisible="false"
                            android:gravity="center"
                            android:maxLength="1"
                            android:maxLines="1"
                            android:visibility="gone" />

                        <LinearLayout
                            android:id="@+id/lin_newcar"
                            android:layout_width="wrap_content"
                            android:layout_height="38dp"
                            android:layout_marginRight="35dp"
                            android:background="@drawable/stroke_f4_c"
                            android:orientation="vertical"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp">

                            <TextView
                                android:id="@+id/txt_plus"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text=" + 新能源"
                                android:textColor="@color/colorBD"
                                android:textSize="18sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/txt_sure"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/lin_license"
                        android:layout_toRightOf="@+id/lin_license"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="确定"
                        android:textColor="@color/colorf5303d"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/txt_cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/txt_sure"
                        android:layout_toRightOf="@+id/txt_sure"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="取消"
                        android:textColor="@color/color333333"
                        android:textSize="22sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/Re_origin"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/et_license"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:hint="车牌号"
                        android:maxLines="1"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:textColor="@color/color333333"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:visibility="visible" />

                    <ImageView
                        android:id="@+id/iv_modify"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/et_license"
                        android:layout_toRightOf="@+id/et_license"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:src="@drawable/pen" />

                    <TextView
                        android:id="@+id/txt_prompt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/iv_modify"
                        android:layout_toRightOf="@+id/iv_modify"
                        android:text="修改车牌号请点这里！"
                        android:textColor="@color/color333333"
                        android:textSize="18sp" />

                </RelativeLayout>

            </RelativeLayout>

            <View
                android:id="@+id/View_2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/Re_license"
                android:background="@color/colorE6E6E6" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/View_2"
                android:paddingLeft="15dp"
                android:paddingTop="20dp"
                android:paddingRight="15dp"
                android:paddingBottom="20dp">

                <TextView
                    android:id="@+id/txt_title_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="15dp"
                    android:text="入场时间："
                    android:textColor="@color/color808080"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/txt_admission_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:paddingBottom="15dp"
                    android:textColor="@color/color333333"
                    android:textSize="24sp"
                    tools:text="2018-12-10 12:40:30" />

                <TextView
                    android:id="@+id/txt_title_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_title_1"
                    android:paddingBottom="15dp"
                    android:text="出场时间："
                    android:textColor="@color/color808080"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/txt_playing_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_admission_time"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:paddingBottom="15dp"
                    android:textColor="@color/color333333"
                    android:textSize="24sp"
                    tools:text="2018-12-10 12:40:30" />

                <TextView
                    android:id="@+id/txt_title_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_title_2"
                    android:paddingBottom="15dp"
                    android:text="停车时长："
                    android:textColor="@color/color808080"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/txt_parking_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_playing_time"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:paddingBottom="15dp"
                    android:textColor="@color/color333333"
                    android:textSize="24sp"
                    tools:text="04小时24分钟" />

                <TextView
                    android:id="@+id/txt_title_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_title_3"
                    android:paddingBottom="15dp"
                    android:text="订单金额："
                    android:textColor="@color/color808080"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/txt_order_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_parking_time"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:paddingBottom="15dp"
                    android:textColor="@color/color333333"
                    android:textSize="24sp"
                    tools:text="￥10.00" />

                <TextView
                    android:id="@+id/txt_title_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_title_4"
                    android:paddingBottom="15dp"
                    android:text="已缴费用："
                    android:textColor="@color/color808080"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/txt_paid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_order_amount"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:paddingBottom="15dp"
                    android:textColor="@color/color333333"
                    android:textSize="24sp"
                    tools:text="￥5.00" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/a_la_ffffff_top_01de6e6e6"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <Button
                        android:id="@+id/btn_free"
                        android:layout_width="240dp"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="25dp"
                        android:layout_marginBottom="25dp"
                        android:background="@color/color139b17"
                        android:text="免费放行"
                        android:textColor="@color/colorWhite"
                        android:textSize="25sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <Button
                        android:id="@+id/btn_toll"
                        android:layout_width="240dp"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="25dp"
                        android:layout_marginBottom="25dp"
                        android:background="@color/colorf5303d"
                        android:text="收费放行"
                        android:textColor="@color/colorWhite"
                        android:textSize="25sp" />

                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

        <View
            android:id="@+id/view_1"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_toStartOf="@+id/Re_right"
            android:layout_toLeftOf="@+id/Re_right" />

        <RelativeLayout
            android:id="@+id/Re_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@color/colorWhite">

            <ImageView
                android:id="@+id/iv_car"
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:layout_margin="25dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/app_logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_car"
                android:layout_centerHorizontal="true"
                android:text="出道口图片"
                android:textColor="@color/color333333"
                android:textSize="24sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="270dp"
                android:layout_height="125dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/a_la_ffffff_top_01de6e6e6">

                <TextView
                    android:id="@+id/txt_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/colorf5303d"
                    android:textSize="28sp"
                    tools:text="待出场" />

            </RelativeLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/key_sure"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_above="@+id/kbv_addcar"
            android:background="@color/colorE6E6E6"
            android:gravity="right|center"
            android:paddingRight="10dp"
            android:text="确定"
            android:textColor="@color/color333333"
            android:textSize="22sp"
            android:visibility="gone" />

        <android.inputmethodservice.KeyboardView
            android:id="@+id/kbv_addcar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/colorc7cfd6"
            android:keyBackground="@drawable/rad_five_white_no"
            android:keyPreviewHeight="40dp"
            android:keyPreviewLayout="@layout/key_perview"
            android:keyPreviewOffset="4dp"
            android:keyTextColor="@color/color333333"
            android:keyTextSize="14dp"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            android:shadowColor="@color/colorc8161d"
            android:shadowRadius="0"
            android:visibility="gone" />

    </RelativeLayout>

</RelativeLayout>