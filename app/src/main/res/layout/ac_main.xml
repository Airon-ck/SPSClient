<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorF5F5F7"
    android:orientation="vertical"
    tools:context=".ui.MainActivity">

    <RelativeLayout
        android:id="@+id/Re_title"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorWhite">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="移动收费"
            android:textColor="@color/color333333"
            android:textSize="25sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Re_title"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toStartOf="@+id/view_1"
            android:layout_toLeftOf="@+id/view_1"
            android:background="@color/colorWhite">

            <EditText
                android:id="@+id/et_license"
                android:layout_width="wrap_content"
                android:layout_height="69dp"
                android:background="@null"
                android:drawableEnd="@drawable/pen"
                android:drawableRight="@drawable/pen"
                android:drawablePadding="15dp"
                android:hint="车牌号"
                android:inputType="text"
                android:maxLines="1"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textColor="@color/color333333"
                android:textSize="28sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/View_2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/et_license"
                android:background="@color/colorE6E6E6" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/View_2"
                android:paddingLeft="15dp"
                android:paddingTop="20dp"
                android:paddingRight="15dp"
                android:paddingBottom="20dp">

                <TextView
                    android:id="@+id/txt_title_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="15dp"
                    android:text="入场时间："
                    android:textColor="@color/color808080"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/txt_admission_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:paddingBottom="15dp"
                    android:textColor="@color/color333333"
                    android:textSize="24sp"
                    tools:text="2018-12-10 12:40:30" />

                <TextView
                    android:id="@+id/txt_title_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_title_1"
                    android:paddingBottom="15dp"
                    android:text="出场时间："
                    android:textColor="@color/color808080"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/txt_playing_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_admission_time"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:paddingBottom="15dp"
                    android:textColor="@color/color333333"
                    android:textSize="24sp"
                    tools:text="2018-12-10 12:40:30" />

                <TextView
                    android:id="@+id/txt_title_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_title_2"
                    android:paddingBottom="15dp"
                    android:text="停车时长："
                    android:textColor="@color/color808080"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/txt_parking_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_playing_time"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:paddingBottom="15dp"
                    android:textColor="@color/color333333"
                    android:textSize="24sp"
                    tools:text="04小时24分钟" />

                <TextView
                    android:id="@+id/txt_title_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_title_3"
                    android:paddingBottom="15dp"
                    android:text="订单金额："
                    android:textColor="@color/color808080"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/txt_order_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_parking_time"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:paddingBottom="15dp"
                    android:textColor="@color/color333333"
                    android:textSize="24sp"
                    tools:text="￥10.00" />

                <TextView
                    android:id="@+id/txt_title_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_title_4"
                    android:paddingBottom="15dp"
                    android:text="已缴费用："
                    android:textColor="@color/color808080"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/txt_paid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_order_amount"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:paddingBottom="15dp"
                    android:textColor="@color/color333333"
                    android:textSize="24sp"
                    tools:text="￥5.00" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/a_la_ffffff_top_01de6e6e6"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <Button
                        android:id="@+id/btn_free"
                        android:layout_width="240dp"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="25dp"
                        android:layout_marginBottom="25dp"
                        android:background="@color/color139b17"
                        android:text="免费放行"
                        android:textColor="@color/colorWhite"
                        android:textSize="25sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <Button
                        android:id="@+id/btn_toll"
                        android:layout_width="240dp"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="25dp"
                        android:layout_marginBottom="25dp"
                        android:background="@color/colorf5303d"
                        android:text="收费放行"
                        android:textColor="@color/colorWhite"
                        android:textSize="25sp" />

                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

        <View
            android:id="@+id/view_1"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_toStartOf="@+id/Re_right"
            android:layout_toLeftOf="@+id/Re_right" />

        <RelativeLayout
            android:id="@+id/Re_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@color/colorWhite">

            <ImageView
                android:id="@+id/iv_car"
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:layout_margin="25dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_car"
                android:layout_centerHorizontal="true"
                android:text="出道口图片"
                android:textColor="@color/color333333"
                android:textSize="24sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="270dp"
                android:layout_height="125dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/a_la_ffffff_top_01de6e6e6">

                <TextView
                    android:id="@+id/txt_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/colorf5303d"
                    android:textSize="28sp"
                    tools:text="待出场" />

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>